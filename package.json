{
  "name": "serpent-town",
  "version": "0.3.0",
  "description": "Snake care simulation game with Stripe integration",
  "type": "module",
  "scripts": {
    "test": "node tests/integration/frontend-to-backend.test.js && node tests/integration/real-scenario.test.js && node tests/modules/shop/game.test.js && node tests/integration/snapshot.test.js",
    "test:unit": "node tests/modules/shop/game.test.js",
    "test:snapshot": "node tests/integration/snapshot.test.js",
    "test:real": "node tests/integration/real-scenario.test.js",
    "test:frontend": "node tests/integration/frontend-to-backend.test.js",
    "test:game": "node tests/modules/game/tamagotchi.test.js && node tests/modules/game/snakes.test.js",
    "test:shop": "node tests/modules/shop/shop.test.js && node tests/modules/shop/game.test.js",
    "test:common": "node tests/modules/common/core.test.js",
    "test:external": "node tests/external/cloudflare/worker-api.test.js && node tests/external/stripe/marketplace.test.js",
    "test:external:cloudflare": "node tests/external/cloudflare/worker-api.test.js && bash tests/external/cloudflare/e2e-purchase-flow.sh",
    "test:external:stripe": "node tests/external/stripe/marketplace.test.js",
    "test:all": "npm test && npm run test:external",
    "start": "python3 -m http.server 8000"
  },
  "keywords": ["game", "snake", "simulation", "stripe"],
  "author": "Serpent Town Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/serpent-town.git"
  }
}
