{
  "name": "snake-muffin",
  "version": "0.7.79",
  "description": "Snake care simulation game with Stripe integration",
  "type": "module",
  "scripts": {
    "test": "node tests/modules/shop/game.test.js && node tests/snapshot/structure-validation.test.js && node tests/smri/scenario-runner.test.js",
    "test:fast": "node tests/modules/shop/game.test.js && node tests/snapshot/structure-validation.test.js",
    "test:smri": "node tests/smri/scenario-runner.test.js",
    "test:smri:browser": "node tests/smri/smri-browser-runner.js",
    "test:slow": "node tests/slow/frontend-to-backend.test.js && node tests/slow/real-scenario.test.js && node tests/slow/worker-api.test.js",
    "test:e2e": "bash tests/e2e/e2e-purchase-flow.sh",
    "test:e2e:security": "node tests/e2e/security-scenarios.test.js",
    "test:e2e:smri": "node tests/e2e/security-scenarios.test.js",
    "test:unit": "node tests/modules/shop/game.test.js",
    "test:snapshot": "node tests/snapshot/structure-validation.test.js",
    "test:stripe-kv": "node tests/integration/stripe-kv-sync.test.js",
    "test:worker-deploy": "node tests/integration/worker-deployment.test.js",
    "test:stripe-webhook": "node tests/integration/stripe-webhook-config.test.js",
    "test:game": "node tests/modules/game/tamagotchi.test.js && node tests/modules/game/snakes.test.js",
    "test:shop": "node tests/modules/shop/shop.test.js && node tests/modules/shop/game.test.js",
    "test:common": "node tests/modules/common/core.test.js",
    "test:health": "node tests/api/health-check.test.js",
    "smri": "node tests/api/health-check.test.js",
    "smri:list": "node scripts/smri-list-scenarios.cjs",
    "smri:list:scenarios": "node scripts/smri-list-scenarios.cjs",
    "smri:list:functions": "node scripts/smri-list-functions.cjs",
    "smri:list:components": "node scripts/smri-list-components.cjs",
    "smri:coverage": "node scripts/smri-list-scenarios.cjs",
    "smri:dead": "node scripts/find-dead-facades.cjs",
    "test:external": "node tests/external/stripe/marketplace.test.js",
    "test:external:stripe": "node tests/external/stripe/marketplace.test.js",
    "test:all": "npm test && npm run test:slow && npm run test:external && npm run test:stripe-kv",
    "test:full": "npm run test:all && npm run test:e2e && npm run test:e2e:security",
    "test:collection:tutorial": "node tests/collections/run-tutorial-collection.js",
    "test:collection:demo": "node tests/collections/run-demo-collection.js",
    "start": "python3 -m http.server 8000",
    "dev:check": "node scripts/check-consistency.cjs && node scripts/check-architecture.cjs",
    "dev:consistency": "node scripts/check-consistency.cjs",
    "dev:architecture": "node scripts/check-architecture.cjs",
    "dev:dead-facades": "node scripts/find-dead-facades.cjs"
  },
  "keywords": [
    "game",
    "snake",
    "simulation",
    "stripe"
  ],
  "author": "Snake Muffin Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/snake-muffin.git"
  },
  "devDependencies": {
    "playwright": "^1.57.0"
  },
  "dependencies": {
    "@serpent-town/flow-purchase": "file:../purchase_flow/packages/flows/purchase"
  }
}
